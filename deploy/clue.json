{
  "version": "1.0",
  "app_name": "brainplay",
  "containers": [
    {
      "name": "clue",
      "resource": "h100-small",
      "image": "shiftlayer/brainplay-llm:latest",
      "port": 80,
      "env": {
        "MODEL": "${MODEL}",
        "SGLANG_EXTRA_ARGS": "${SGLANG_EXTRA_ARGS}",
        "MINER_HOTKEY": "${MINER_HOTKEY}"
      },
      "replicas": {
        "min": 1,
        "max": 1,
        "target_concurrency": 30
      }
    }
  ]
}